@page "/projects"
@page "/projects/{token}"
@using System.ComponentModel.DataAnnotations;
@using rMakev2.ViewModel;
@using rMakev2.Services;
@inject RmakeViewModel vm;
@inject ProjectViewModel PVm;

<style>
    .projectList {
        display: flex;
        flex-direction: column;
    }

    .projectContainer {
        border: solid black 1px;
        border-radius: 5px;
        padding: 5px;
        margin-top: 10px;
    }

    .createButton{
        border: solid black 1px;
        border-radius: 5px;
        padding: 5px;
    }

</style>

<div>
    <button @onclick="PVm.NewProject" class="createButton">Create project</button>

    <div class="projectList">


        @foreach (var project in PVm.Portfolio.Projects)
        {
            <div class="projectContainer">
                <button @onclick="() => PVm.LoadDocuments(project)">@project.Name</button>
                <button @onclick="() => PVm.DeleteProject(project)">Borrar</button>
            </div>
        }

    </div>



</div>

@code {
    [Parameter]
    public string token { get; set; }

    protected override async Task OnInitializedAsync()
    {
        PVm.Portfolio = vm.App.Portfolio;

        try
        {
            if (token != null)
            {
                await PVm.LoadProyectAsync(token);
            }
        }
        catch
        {

        }
    }




}
