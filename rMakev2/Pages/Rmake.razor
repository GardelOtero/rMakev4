                                                            </MudIconButton>
                                                        </MudListItem>
                                                    }
                                                    else
                                                    {
                                                        <MudListItem Text="@item1.Name" Value="@item1.Id" @onclick="@(() => vm.EventSelectDocumentMenu(item1))">
