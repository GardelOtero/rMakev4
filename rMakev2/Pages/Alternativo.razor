    public async Task SetDocumentContent(Document document)
    {
        if(isLoading == false)
        {
            isLoading = true;
            await CallJSSave();
            vm.Ui.SelectDocument(document);
            if (!String.IsNullOrEmpty(vm.Ui.SelectedDocument.Content))
            {
                await jsRuntime.InvokeVoidAsync("loadContent", vm.Ui.SelectedDocument.Content);
            }
            isLoading = false;
        }
